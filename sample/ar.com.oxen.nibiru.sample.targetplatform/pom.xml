<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ar.com.oxen.nibiru.sample</artifactId>
		<groupId>ar.com.oxen.nibiru</groupId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<groupId>ar.com.oxen.nibiru.sample</groupId>
	<artifactId>ar.com.oxen.nibiru.sample.targetplatform</artifactId>
	<name>ar.com.oxen.nibiru.sample.targetplatform</name>
	<url>http://maven.apache.org</url>
	<dependencies>
		<!-- Nibiru sample project dependencies -->
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.webapp</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.datasource.fragment</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.jpa.fragment</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.oda.jdbc.fragment</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<!-- Core Nibiru target platform and dependencies -->
		<dependency>
			<groupId>ar.com.oxen.nibiru.support</groupId>
			<artifactId>ar.com.oxen.nibiru.targetplatform</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<!-- Non-core Nibiru dependencies -->
		<dependency>
			<groupId>ar.com.oxen.nibiru.security</groupId>
			<artifactId>ar.com.oxen.nibiru.security.spring.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.security</groupId>
			<artifactId>ar.com.oxen.nibiru.security.manager.jpa.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.security</groupId>
			<artifactId>ar.com.oxen.nibiru.security.ui.generic.presenter.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.security</groupId>
			<artifactId>ar.com.oxen.nibiru.security.ui.generic.view.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.security</groupId>
			<artifactId>ar.com.oxen.nibiru.security.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.mail</groupId>
			<artifactId>ar.com.oxen.nibiru.mail.javamail.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.license</groupId>
			<artifactId>ar.com.oxen.nibiru.license.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.license</groupId>
			<artifactId>ar.com.oxen.nibiru.license.store.jpa.service</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.report</groupId>
			<artifactId>ar.com.oxen.nibiru.report.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>target/platform</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
							<overWriteIfNewer>true</overWriteIfNewer>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>